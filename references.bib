@article{Hubacek2019,
title = {Exploiting sports-betting market using machine learning},
journal = {Applied Soft Computing},
volume = {83},
pages = {105654},
year = {2019},
issn = {1568-4946},
doi = {10.1016/j.asoc.2019.105654},
url = {https://www.sciencedirect.com/science/article/abs/pii/S156849461930007X},
author = {Ondřej Hubáček and Gustav Šourek and Filip Železný},
abstract = {The study developed a profitable sports betting system using three novel components: (1) explicitly reducing correlation with bookmaker predictions while maintaining accuracy, (2) using convolutional neural networks for player-level feature aggregation, and (3) applying modern portfolio theory for optimal bet distribution. The system achieved systematic positive returns on NBA data from 2006-2014.}
