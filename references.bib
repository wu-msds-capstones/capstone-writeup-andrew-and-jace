@article{Vandenbruaene2022,
title = {Efficient Spread Betting Markets: A Literature Review},
journal = {Journal of Sports Economics},
volume = {23},
number = {4},
pages = {442-479},
year = {2022},
issn = {1527-0025},
doi = {10.1177/15270025211071042},
url = {https://journals.sagepub.com/doi/10.1177/15270025211071042},
author = {Jonas Vandenbruaene and Jan Annaert and Marc De Ceuster},
abstract = {Are simple trading strategies profitable? It is a question that has been on the minds of academics and practitioners for decades. In this paper, we review the longstanding literature on trading strategies in spread betting (also known as handicap betting), a popular sports betting microstructure. We review over 600 strategy implementations and find that market efficiency and systematic misperceptions are not mutually exclusive per se. Predictable glitches occur, but they are too small to be profitably exploited which is consistent with efficient markets.}
}
